.costs
	background #00aeef
	padding 100px 0

.container
	width 90%
	margin 0 auto

.clearfix {
	&:after {
		content: ".";
		display: block;
		height: 0;
		clear: both;
		visibility: hidden;
		}
}	
.benefits
	position relative
	
	&__title
		color white
		font-size 36px
		text-align center
		font-family 'Roboto', sans-serif
		line-height 48px
		margin 0 0 34px
		letter-spacing 2px
		
	&__text
		color white
		font-size 18px
		text-align center
		font-family 'Roboto', sans-serif
		line-height 32px
		margin 0 auto 58px
		max-width 750px
		letter-spacing 2px
		
.benefit__item__filter {
    margin: auto;
    width: 360px;
    text-align: center;
    height: 360px;
    line-height: 360px;
    background: white;
    border-radius: 50%;
}
.benefit__item__filter img {
    width: 180px;
    padding: 0;
    box-sizing: border-box;
    vertical-align: middle;
}
.benefit__item {
	

	&__name {
	    line-height: 20px;
	    color: #fff;
	    font-size: 18px;
	    font-family: sans-serif;
	    font-weight: bold;
	    width: 255px;
	    margin: 1em auto;
	}
	
	&__boutle {

		&__small {
		    margin: auto;
		    width: 360px;
		    text-align: center;
		    height: 360px;
		    line-height: 360px;
		    background: white;
		    border-radius: 50%;
		    float: left;    
		    margin-top: -45px;
		    
			img {
			    width: 72px;
			    padding: 0;
			    box-sizing: border-box;
		    	vertical-align: middle;
			}

		}
		
		&__big {
		    margin: auto;
		    width: 360px;
		    text-align: center;
		    height: 360px;
		    line-height: 360px;
		    background: white;
		    border-radius: 50%;
		    float: right;
		    margin-top: -45px;
		    
			img {
			    width: 112px;
			    padding: 0;
			    box-sizing: border-box;
		    	vertical-align: middle;
			}

		}
	}
}
@import "styl/mixins"

.benefit__item 
	+for_breakpoint(mobile tablet)
		float none
		position relative
		margin-top 90px
		margin-bottom 90px
		